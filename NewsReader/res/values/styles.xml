        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="tab_item_style">
        <item name="android:textSize">14.0sp</item>
        <!-- 字体大小 -->
        <item name="android:textColor">#ff696969</item>
        <!-- 字体颜色 -->
